{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [{"matchCategories": ["docker"], "versioning": "semver"}],
  "enabledManagers": ["dockerfile", "custom.regex"],
  "extends": ["config:best-practices"],
  "automerge": false,
  "platformAutomerge": false,
  "labels": ["update/renovate"],
  "prHourlyLimit": 5,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sARG .*?_VER=\"(?<currentValue>.*)\"\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "postUpgradeTasks": {
    "commands": [
      "./renovate-post-upgrade-tasks.sh"
    ]
  }
}

