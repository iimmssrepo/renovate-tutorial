{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [{"matchCategories": ["docker"], "versioning": "semver"}],
  "enabledManagers": ["dockerfile", "custom.regex"],
  "extends": ["config:best-practices"],
  "automerge": false,
  "platformAutomerge": false,
  "labels": ["update/renovate"],
  "prHourlyLimit": 5,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG PYTHON_VERSION=\"?(?<currentValue>3\\.(?<minor>\\d{1,2}))\"?\\s"
      ],
      "autoReplaceStringTemplate": "ARG PYTHON_VERSION=3.{{{minor}}}\n",
      "currentValueTemplate": "3.{{{minor}}}",
      "datasourceTemplate": "python-version",
      "versioningTemplate": "python",
      "depNameTemplate": "python"
    }
  ],
  "postUpgradeTasks": {
    "commands": [
      "./renovate-post-upgrade-tasks.sh"
    ]
  }
}
