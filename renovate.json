{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["dockerfile", "custom.regex"],
  "extends": [
    "config:best-practices",
    ":semanticCommits"
  ],
  "automerge": true,
  "platformAutomerge": true,
  "labels": [
    "update/renovate"
  ],
  "prHourlyLimit": 5,
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "versioning": "loose"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "semanticCommitType": "fix",
      "commitMessagePrefix": "fix(deps): ",
      "commitMessageExtra": "patch upgrade"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "semanticCommitType": "feat",
      "commitMessagePrefix": "feat(deps): ",
      "commitMessageExtra": "minor upgrade"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "semanticCommitType": "feat",
      "commitMessagePrefix": "feat(base image)!:",
      "commitMessageExtra": "BREAKING CHANGE: Major version upgrade of the base image."
    },
    {
      "description": "Set php updates to trigger patch releases",
      "matchDatasources": [
        "repology"
      ],
      "semanticCommitType": "fix"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sARG .*?_VERSION=\"(?<currentValue>.*)\"\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "ARG PHP_MAJOR_MINOR_VERSION=\"(?<currentValue>\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "repology",
      "depNameTemplate": "ubuntu_24_04/php-fpm",
      "versioningTemplate": "loose",
      "extractVersionTemplate": "(?<=ARG PHP_FPM_VERSION=\\\"\\d+:)(?<version>\\d+\\.\\d+)(?=\\+)",
      "replacementTemplate": "ARG PHP_MAJOR_MINOR_VERSION=\"{{newVersion}}\""
    }
  ]
}
