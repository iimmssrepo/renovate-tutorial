{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "LABEL release_date=\"(?<currentValue>\\d{8})\""
      ],
      "datasourceTemplate": "simple",
      "versioningTemplate": "regex:^\\d{8}$",
      "extractVersionTemplate": "{{#currentValue}}{{currentValue}}{{/currentValue}}",
      "updateStrategy": "bump",
      "depNameTemplate": "Dockerfile release_date"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["Dockerfile release_date"],
      "versioning": "regex:^\\d{8}$",
      "bumpVersion": "currentDate",
      "customValueOptions": {
        "currentDate": "{{date 'YYYYMMDD'}}"
      }
    }
  ]
}

