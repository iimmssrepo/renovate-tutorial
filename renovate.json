{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [{
    "matchCategories": ["docker"], 
    "versioning": "semver"
    },
    {
    "matchDatasources": ["github-releases"],
    "matchPackageNames": ["openresty/openresty"],
    "extractVersion": "^v(?<version>\\d+\\.\\d+\\.\\d+(\\.\\d+)?)$",
    "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(\\.(?<build>\\d+))?$"
    }
  ],
  "enabledManagers": ["dockerfile", "custom.regex"],
  "extends": ["config:best-practices"],
  "automerge": false,
  "platformAutomerge": false,
  "labels": ["update/renovate"],
  "prHourlyLimit": 5,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sARG .*?_version=\"(?<currentValue>.*)\"\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
      "autoReplaceStringTemplate": "{{#if version}}{{{version}}}{{/if}}"
    }
  ]
}

