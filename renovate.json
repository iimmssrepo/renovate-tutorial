{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [{"matchCategories": ["docker"], "versioning": "semver"}],
  "enabledManagers": ["dockerfile", "custom.regex"],
  "extends": ["config:best-practices"],
  "automerge": false,
  "platformAutomerge": false,
  "labels": ["update/renovate"],
  "prHourlyLimit": 5,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "depNameTemplate": "taers232c/GAMADV-XTD3",
      "matchStrings": ["ENV GAMADV_XTD3=(?<currentValue>.*?)\\n"],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver-coerced"
    }
  ],
  "postUpgradeTasks": {
    "commands": [
      "./renovate-post-upgrade-tasks.sh"
    ]
  }
}
